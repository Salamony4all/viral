# Viral Engine Configuration Template
# Copy this to .env and fill in your values

# ==================== LLM & AI SERVICES ====================
OLLAMA_BASE_URL=http://localhost:11434
COMFYUI_BASE_URL=http://localhost:8188
COMFYUI_WEBSOCKET_URL=ws://localhost:8188/ws
OLLAMA_MODEL=mistral
EMBEDDING_MODEL=nomic-embed-text

# ==================== CONTENT CONFIG ====================
CONTENT_LENGTH_SECONDS=30
TARGET_NICHE=lifestyle
MONETIZATION_FOCUS=hybrid  # Options: affiliate, shop, seo, hybrid

# ==================== SCRAPING CONFIG ====================
PLAYWRIGHT_HEADLESS=true
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPE_TIMEOUT=30

# ==================== VIDEO GENERATION CONFIG ====================
VIDEO_RESOLUTION=1080x1920
VIDEO_FPS=30
AUDIO_BITRATE=192k

# ==================== NOTIFICATIONS ====================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
USE_LOCAL_NOTIFICATIONS=true

# ==================== STOCK VIDEO APIs (Free) ====================
# Get free key: https://www.pexels.com/api/  (recommended)
PEXELS_API_KEY=
# Get free key: https://pixabay.com/api/docs/
PIXABAY_API_KEY=

# ==================== GOOGLE VEO 3.1 (Text-to-Video) ====================
GOOGLE_VEO_API_KEY=
GOOGLE_VEO_MODEL=veo-3.1-generate-preview

# ==================== REPLICATE (Text-to-Video AI) ====================
# Get token: https://replicate.com/account - enables AI-generated video when stock fails
REPLICATE_API_TOKEN=
REPLICATE_VIDEO_MODEL=minimax/video-01

# ==================== BAIDU AI (Script Generation) ====================
# Get key: https://aistudio.baidu.com/ - use for dynamic, non-repetitive scripts
BAIDU_AI_API_KEY=
BAIDU_AI_BASE_URL=https://aistudio.baidu.com/llm/lmapi/v3
BAIDU_AI_MODEL=ernie-5.0-thinking-preview

# ==================== EXTERNAL APIs (Optional) ====================
AMAZON_API_KEY=your_amazon_api_key
TIKTOK_SHOP_API_KEY=your_tiktok_shop_api_key

# ==================== DATABASE (Docker) ====================
DB_PASSWORD=viral_engine_pwd
DATABASE_URL=postgresql://admin:viral_engine_pwd@postgres:5432/viral_engine
REDIS_URL=redis://redis:6379/0

# ==================== LOGGING ====================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# ==================== CREW AI CONFIG ====================
CREW_VERBOSE=false
MAX_ITERATIONS=10
